{
	"name": "eslint-plugin-fsd-core",
	"version": "1.0.2",
	"description": "ESLint rules to enforce clean layer structure and import conventions in Feature-Sliced Design projects.",
	"keywords": [
		"eslint",
		"eslint-plugin",
		"feature-sliced",
		"fsd",
		"layers",
		"architecture",
		"imports",
		"public-api",
		"path-checks",
		"lint"
	],
	"author": "bzuev",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": "./dist/index.js",
	"scripts": {
		"build": "tsup",
		"build:tests": "tsup --config tsup.tests.config.ts --silent",
		"lint": "npm-run-all \"lint:*\"",
		"lint:eslint-docs": "npm-run-all \"update:eslint-docs -- --check\"",
		"lint:js": "eslint .",
		"test": "npm run build:tests && mocha dist-tests/*.test.js",
		"update:eslint-docs": "npx eslint-doc-generator",
		"release": "npm run build && npm version patch && npm publish --access public",
		"release:minor": "npm run build && npm version minor && npm publish --access public",
		"release:major": "npm run build && npm version major && npm publish --access public"
	},
	"dependencies": {
		"@typescript-eslint/utils": "^8.46.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.28.4",
		"@types/micromatch": "^4.0.9",
		"@types/node": "^24.7.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-doc-generator": "^2.2.2",
		"eslint-plugin-eslint-plugin": "^7.0.0",
		"eslint-plugin-node": "^11.1.0",
		"micromatch": "^4.0.8",
		"mocha": "^11.7.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"eslint": "^9.0.0"
	},
	"engines": {
		"node": "^14.17.0 || ^16.0.0 || >= 18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/bzuev/eslint-fsd-plugin.git"
	}
}

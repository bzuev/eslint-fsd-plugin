{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["lib/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
